<suite name="CrossBrowserSuite" parallel="tests" thread-count="3">
    <listeners>
        <listener class-name="nn.dsalgo.listeners.TestListeners"/>
        <listener class-name="nn.dsalgo.listeners.AnnotationTransformer"/>
    </listeners>
    <test name="ChromeTest">
        <parameter name="browser" value="chrome"/>
        <classes>
            <class name = "nn.dsalgo.tests.LoginTest"/>
            <class name = "nn.dsalgo.tests.HomeTest"/>
            <class name = "nn.dsalgo.tests.RegisterTest"/>
            <class name = "nn.dsalgo.tests.DatastructureTest"/>
            <class name = "nn.dsalgo.tests.LinkedListTest"/>
            <class name = "nn.dsalgo.tests.StackTest"/>
            <class name = "nn.dsalgo.tests.TreeTest"/>
            <class name = "nn.dsalgo.tests.QueueTest"/>
        </classes>
    </test>
    <test name="EdgeTest">
        <parameter name="browser" value="edge"/>
        <classes>
            <class name = "nn.dsalgo.tests.LoginTest"/>
            <class name = "nn.dsalgo.tests.HomeTest"/>
            <class name = "nn.dsalgo.tests.RegisterTest"/>
            <class name = "nn.dsalgo.tests.DatastructureTest"/>
            <class name = "nn.dsalgo.tests.LinkedListTest"/>
            <class name = "nn.dsalgo.tests.StackTest"/>
            <class name = "nn.dsalgo.tests.TreeTest"/>
            <class name = "nn.dsalgo.tests.QueueTest"/>
        </classes>
    </test>
    <test name="FirefoxTest">
        <parameter name="browser" value="firefox"/>
        <classes>
            <class name = "nn.dsalgo.tests.LoginTest"/>
            <class name = "nn.dsalgo.tests.HomeTest"/>
            <class name = "nn.dsalgo.tests.RegisterTest"/>
            <class name = "nn.dsalgo.tests.DatastructureTest"/>
            <class name = "nn.dsalgo.tests.LinkedListTest"/>
            <class name = "nn.dsalgo.tests.StackTest"/>
            <class name = "nn.dsalgo.tests.TreeTest"/>
            <class name = "nn.dsalgo.tests.QueueTest"/>
        </classes>
    </test>
</suite>
